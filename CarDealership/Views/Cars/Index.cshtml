@using CarDealership.Models;

<h1>Cars!</h1>
<ul>

@if (Model.Count == 0)
{
  <p>You have no cars in your dealership!</p>
}
@if(Model.Count != 0)
{
  @foreach (Car car in Model)
  {
    <h4>Model: @car.GetMakeModel()</h4>
    <li>Price: @car.GetPrice()</li>
    <li>Miles: @car.GetMiles()</li>
    <li>Details: @car.GetMessage()</li>
  }
}

</ul>
<a href="/cars/new">Add a new car.</a>
